---
import { FeatureIcon } from './ui/FeatureIcon.tsx';
import { Button } from './ui/Button.tsx';

const pricingPlans = [
  {
    name: "1 Usuario, 1 RFC",
    originalPrice: "4,290",
    discountPrice: "3,861",
    features: [
      { included: true, text: "Verificación masiva de CFDI" },
      { included: true, text: "Validación contra el SAT" },
      { included: true, text: "Reportes profesionales completos" },
      { included: true, text: "Soporte por correo, teléfono y chat" },
      { included: true, text: "1 RFC incluido" }
    ],
    popular: false
  },
  {
    name: "1 Usuario, 3 RFC's",
    originalPrice: "5,990",
    discountPrice: "5,391",
    features: [
      { included: true, text: "Verificación masiva de CFDI" },
      { included: true, text: "Validación contra el SAT" },
      { included: true, text: "Reportes profesionales completos" },
      { included: true, text: "Soporte por correo, teléfono y chat" },
      { included: true, text: "3 RFC's incluidos" }
    ],
    popular: true
  },
  {
    name: "3 Usuarios, 10 RFC's",
    originalPrice: "10,390",
    discountPrice: "9,351",
    features: [
      { included: true, text: "Verificación masiva de CFDI" },
      { included: true, text: "Validación avanzada contra el SAT" },
      { included: true, text: "Reportes profesionales completos" },
      { included: true, text: "Soporte por correo, teléfono y chat" },
      { included: true, text: "10 RFC's incluidos" }
    ],
    popular: false
  },
  {
    name: "5 Usuarios, RFC's Ilimitados",
    originalPrice: "15,690",
    discountPrice: "14,121",
    features: [
      { included: true, text: "Verificación masiva de CFDI" },
      { included: true, text: "Validación avanzada contra el SAT" },
      { included: true, text: "Reportes profesionales completos" },
      { included: true, text: "Soporte por correo, teléfono y chat" },
      { included: true, text: "RFC's ilimitados" }
    ],
    popular: false
  }
